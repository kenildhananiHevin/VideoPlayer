<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/relativeVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_thumb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_video_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#494949"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txt_video_duration"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/text_item_bg"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_vertical|center_horizontal"
                    android:includeFontPadding="false"
                    android:text="00:18"
                    android:textColor="@color/du_bg"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:background="@color/white"
            android:layout_below="@id/img_thumb">

            <TextView
                android:id="@+id/text_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toStartOf="@id/more"
                android:ellipsize="marquee"
                android:fontFamily="@font/inter_semibold"
                android:includeFontPadding="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/player_more" />

            <ImageView
                android:id="@+id/selectImg"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/select_player_de"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/txt_video_date"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_below="@+id/text_video_name"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/txt_date_bg"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:visibility="gone"
                android:singleLine="true"
                android:text="28/01/2024"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_video_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_video_name"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txt_video_date"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="896 Mb"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>