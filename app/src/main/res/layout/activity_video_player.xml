<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#1C1C1C"
    tools:context=".activity.VideoPlayerActivity">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:animation_enabled="false"
        app:hide_on_touch="false"
        app:show_timeout="0"
        />

    <FrameLayout
        android:id="@+id/videoBackgroundNightMode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/night_mode_bg"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout_touch"
            android:layout_width="@dimen/port"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/_100sdp" />

        <RelativeLayout
            android:id="@+id/relativeLayout_bright"
            android:layout_width="@dimen/port"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/_100sdp" />

        <RelativeLayout
            android:id="@+id/relativeLayout_videoDuration"
            android:layout_width="@dimen/landspace"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_100sdp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/rl_volume"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="@dimen/_250sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center_vertical">

            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_210sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_progress_radius" >
                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />
                <ImageView
                    android:id="@+id/iv_volume"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/volume" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frameprogress"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_210sdp"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:minHeight="280dp"
                android:visibility="visible">

                <videoplayer.mediaplayer.hd.other.VerticalSeekBarWrapper
                    android:layout_width="30dp"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_gravity="center"
                    android:layoutDirection="ltr">

                    <videoplayer.mediaplayer.hd.other.VerticalSeekBar
                        android:id="@+id/sb_volume"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:max="100"
                        android:splitTrack="false"
                        android:progressTint="@color/txt_bg"
                        android:progressBackgroundTint="#FFFFFF"
                        android:thumb="@drawable/thumb_white"
                        app:seekBarRotation="CW270" />

                </videoplayer.mediaplayer.hd.other.VerticalSeekBarWrapper>


            </FrameLayout>


        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rl_brightness"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="@dimen/_250sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center_vertical">

            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_210sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_progress_radius" >
                <TextView
                    android:id="@+id/tv_brightness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />
                <ImageView
                    android:id="@+id/iv_brightness"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/brigtness" />
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/frameprogress2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_210sdp"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:minHeight="280dp"
                android:visibility="visible">

                <videoplayer.mediaplayer.hd.other.VerticalSeekBarWrapper
                    android:layout_width="30dp"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_gravity="center"
                    android:layoutDirection="ltr">

                    <videoplayer.mediaplayer.hd.other.VerticalSeekBar
                        android:id="@+id/sb_brightness"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:max="100"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_white"
                        android:progressTint="@color/txt_bg"
                        android:progressBackgroundTint="#FFFFFF"
                        app:seekBarRotation="CW270" />
                </videoplayer.mediaplayer.hd.other.VerticalSeekBarWrapper>


            </FrameLayout>


        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/speed_bg"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/speed_close"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:src="@drawable/player_close"
                app:tint="#FFFFFF"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/txtSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/inter_semibold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/txtSpeed_255"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/speed_border"
                android:textColor="#FFFFFF"
                android:text="0.25X"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:id="@+id/txtSpeed_5"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/speed_border"
                android:textColor="#FFFFFF"
                android:text="0.5X"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:id="@+id/txtSpeed_1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/select_border"
                android:textColor="#FFFFFF"
                android:text="1X"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:id="@+id/txtSpeed_25"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/speed_border"
                android:textColor="#FFFFFF"
                android:text="1.25X"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:id="@+id/txtSpeed_2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/speed_border"
                android:textColor="#FFFFFF"
                android:text="2X"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical|center_horizontal"/>

            
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtCurrentPostion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/du_bg"
        android:fontFamily="@font/inter_semibold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>


