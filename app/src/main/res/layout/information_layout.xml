<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_bg"
    android:padding="@dimen/_13sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/video_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/video_info"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:textSize="@dimen/_15sdp"/>
    
    <ImageView
        android:id="@+id/information_close"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_2sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/player_close"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_info"
        android:layout_marginTop="@dimen/_17sdp">

        <TextView
            android:id="@+id/info_v_f_name"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="@string/file"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text=":"/>

        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/info_v_path"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text=":"/>


        <TextView
            android:id="@+id/text_full_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/info_v_durat"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="@string/length"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text=":"/>


        <TextView
            android:id="@+id/text_video_duartion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/info_v_size"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="@string/size"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text=":"/>


        <TextView
            android:id="@+id/text_video_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/info_v_date"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text=":"/>


        <TextView
            android:id="@+id/text_video_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/info_v_resolution"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="@string/resolution"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text=":"/>


        <TextView
            android:id="@+id/text_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/inter_regular"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="@dimen/_13sdp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>