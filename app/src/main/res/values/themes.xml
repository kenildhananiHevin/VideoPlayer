<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VideoPlayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:includeFontPadding">false</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.VideoPlayer" parent="Base.Theme.VideoPlayer" />

    <style name="TextMarquee" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>


</resources>